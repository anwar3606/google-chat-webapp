{
  "name": "chat",
  "version": "1.2.2",
  "description": "Google Chat",
  "main": "main.js",
  "categories": [
    "Other"
  ],
  "author": {
    "name": "Anwar Hossain",
    "email": "anwar.hossain@dsinnovators.com"
  },
  "homepage": "https://github.com/anwar3606/google-chat-webapp",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "electronVersion": "24.2.0",
    "appId": "com.anwarh.googlechat",
    "productName": "Chat",
    "publish": {
      "provider": "github",
      "owner": "anwar3606"
    },
    "extraResources": [
      {
        "from": "./",
        "to": "./",
        "filter": [
          "*.png"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "artifactName": "Google Chat Setup ${version}.${ext}",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  },
  "devDependencies": {
    "electron": "^24.4.0",
    "electron-builder": "^23.6.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "dependencies": {
    "electron-updater": "^5.3.0",
    "sharp": "^0.32.1"
  }
}
